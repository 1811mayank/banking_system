<br>
<div class="container content-center">
    <div class="row justify-content-center">
        <h1>Transfer Money</h1>
    </div>
    <br>
    <%= form_with  do |form| %>    
        <div class="dropdown  btn-secondary ">
            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
                Select account from you want to Transfer
            </a>
            <div class="dropdown-menu">
                <% @accounts.each do |account|%>
                    <% if account.type_of_account != "Loan"%>
                        <%= link_to (account.number), "/transfer/#{account.id}", class:"dropdown-item custom-1", :remote => true  %>
                    <% end %>
                <% end %>
            </div>
        </div>

    <% end %>
    <div class="transfer-money"></div>  
</div>