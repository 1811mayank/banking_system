<h1>User Details</h1>
<%= form_with do |f| %>
    <div class="form-group">
        
        <%= "First Name: #{@user.first_name.capitalize}" %>
    </div>

    <div class="form-group">
        
        <%= "Last Name: #{@user.last_name.capitalize}" %>
    </div>

    <div class="form-group">
        <%=  "City: #{@user.city.capitalize}" %>
    </div>

    <div class="form-group">
    
        <%= "Date of Birth: #{@user.dob.to_date}" %>
    </div>

    <div class="form-group">
        
        <%= "Email: #{@user.email}" %>
    </div>

    <div class="form-group">
        <strong><%= "Accounts:" %></strong>
    </div>
    <% @user.accounts.each do |account|%>
        <div class="form-group">
        <div class="row">
            <div class="col">
                <%= "Account Number: #{account.number} "%> 
            </div>
            <div class="col">
                <%= "Balance: #{account.balance}" %> 
            </div>
            <div class="col">
                <%= "Type: #{account.type_of_account}"%>
            </div>
        </div>
        </div>
    <% end%>
    
    <div class="form-group">
        
        <% if current_user.admin? %>
            <%= link_to ("Back"), dashboard_index_path, class:"btn btn-outline-success my-2 my-sm-0"%>
        <% else %>
            <%= link_to ("Back"), accounts_path, class:"btn btn-outline-success my-2 my-sm-0"%> 
        <% end %> 

    </div>
<% end %>